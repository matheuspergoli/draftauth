{
	"name": "@draftauth/client",
	"version": "0.1.0",
	"type": "module",
	"description": "Draft Auth Client SDK",
	"author": "Matheus Pergoli <https://docs.draftauth.com.br>",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"typings": "dist/index.d.ts",
	"files": ["dist"],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"module": "./dist/index.mjs",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"default": "./dist/index.mjs"
		},
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/matheuspergoli/draftauth.git"
	},
	"bugs": {
		"url": "https://github.com/matheuspergoli/draftauth/issues"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"deploy": "tsup && changeset publish",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.2",
		"@draftauth/tsconfig": "workspace:*",
		"@types/node": "^22.15.3",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3"
	}
}
